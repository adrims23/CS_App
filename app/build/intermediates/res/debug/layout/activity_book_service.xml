<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.comp107x.myapplication.BookService"
    android:background="@color/windowBackground">

    <TextView android:text="Welcome"
        android:id="@+id/bookservice" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/Choosebrand"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:padding="5dp"
        android:layout_below="@+id/bookservice"/>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignTop="@+id/Choosebrand"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/ChoosebrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="97dp"
            android:padding="2dp"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:id="@+id/btnBook"
        android:layout_below="@+id/UserAddress2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserName"
        android:hint="Name"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignEnd="@+id/btnBook"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserAddress1"
        android:hint="Address1"
        android:layout_below="@+id/UserName"
        android:layout_alignEnd="@+id/UserName"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserAddress2"
        android:hint="Address2"
        android:layout_below="@+id/UserAddress1"
        android:layout_alignEnd="@+id/UserAddress1"
        android:layout_toEndOf="@+id/linearLayout" />
</RelativeLayout>
